<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        tools:context="fmf.findmyfood.Fragments.Information">

    <Button
            android:id="@+id/infoButt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/RedLogo"
            android:text="- Finding Restaurant -" />

    <Button
            android:id="@+id/directionsButt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/RedLogo"
            android:text="" />

    <Button
            android:id="@+id/newChoiceButt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/RedLogo"
            android:text="" />

    <Button
            android:id="@+id/likeButt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/RedLogo"
            android:text="" />

    <Button
            android:id="@+id/dislikeButt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/RedLogo"
            android:text="" />

    <TextView
            android:id="@+id/fragmentText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:textColor="@color/MainLogo" />

</FrameLayout>